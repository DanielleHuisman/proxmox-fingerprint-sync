    "$schema": "https://json.schemastore.org/prettierrc",
    "importOrder": ["^~/", "^[.]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "jsonRecursiveSort": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-sort-json"],
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4
}
